{
  "id": "image_with_text",
  "type": "SharedSlice",
  "name": "ImageWithText",
  "description": "Image alongside text content with configurable image position",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default variation",
      "imageUrl": "",
      "primary": {
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "Small heading above title"
          }
        },
        "title": {
          "type": "StructuredText",
          "config": {
            "label": "Title",
            "single": "heading3"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "multi": "paragraph,strong,em,hyperlink",
            "allowTargetBlank": true
          }
        },
        "image": {
          "type": "Image",
          "config": {
            "label": "Image"
          }
        },
        "image_position": {
          "type": "Select",
          "config": {
            "label": "Image Position",
            "options": [
              "left",
              "right"
            ]
          }
        },
        "padding_top": {
          "type": "Boolean",
          "config": {
            "label": "Padding Top",
            "default_value": true
          }
        },
        "padding_bottom": {
          "type": "Boolean",
          "config": {
            "label": "Padding Bottom",
            "default_value": true
          }
        },
        "space_above": {
          "type": "Boolean",
          "config": {
            "label": "Space Above",
            "default_value": true
          }
        },
        "space_below": {
          "type": "Boolean",
          "config": {
            "label": "Space Below",
            "default_value": true
          }
        }
      }
    }
  ]
}