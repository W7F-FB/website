{
  "format": "page",
  "id": "tournament",
  "label": "Tournament",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "URL slug for this tournament"
        }
      },
      "status": {
        "type": "Select",
        "config": {
          "label": "Status",
          "placeholder": "",
          "options": ["Upcoming", "Live", "Complete"]
        }
      },
      "hero_image": {
        "type": "Image",
        "config": {
          "label": "Hero Image",
          "constraint": {
            "width": 3000,
            "height": 2000
          },
          "thumbnails": []
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Tournament title",
          "useAsTitle": true
        }
      },
      "country_code": {
        "type": "Text",
        "config": {
          "label": "Country Code",
          "placeholder": "Two-letter country code (e.g., US, UK, FR)"
        }
      },
      "stadium_name": {
        "type": "Text",
        "config": {
          "label": "Stadium Name",
          "placeholder": ""
        }
      },
      "start_date": {
        "type": "Date",
        "config": {
          "label": "Start Date"
        }
      },
      "end_date": {
        "type": "Date",
        "config": {
          "label": "End Date"
        }
      },
      "number_of_teams": {
        "type": "Number",
        "config": {
          "label": "Number of Teams",
          "placeholder": ""
        }
      },
      "recap": {
        "type": "Link",
        "config": {
          "label": "Recap",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "blog",
              "fields": [
                "title",
                "image",
                "category",
                "date",
                "author",
                "excerpt"
              ]
            }
          ]
        }
      },
      "highlight_reel_link": {
        "type": "Link",
        "config": {
          "label": "Highlight Reel Link",
          "placeholder": "",
          "select": null,
          "allowTargetBlank": true,
          "allowText": true,
          "repeat": false
        }
      },
      "tickets_available": {
        "type": "Boolean",
        "config": {
          "label": "Tickets Available",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "opta_competition_id": {
        "type": "Text",
        "config": {
          "label": "Opta Competition ID",
          "placeholder": ""
        }
      },
      "opta_season_id": {
        "type": "Text",
        "config": {
          "label": "Opta Season ID",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "Navigation": {
      "show_in_navigation": {
        "type": "Boolean",
        "config": {
          "placeholder_false": "Hidden from navigation",
          "placeholder_true": "Show in navigation",
          "default_value": false,
          "label": "Show in Navigation"
        }
      },
      "navigation_order": {
        "type": "Number",
        "config": {
          "label": "Navigation Order",
          "placeholder": "Order in navigation (lower numbers appear first)"
        }
      },
      "nav_image": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "Navigation Image"
        }
      }
    }
  }
}
