{
  "format": "page",
  "id": "tournament",
  "label": "Tournament",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "URL slug for this tournament"
        }
      },
      "featured": {
        "type": "Boolean",
        "config": {
          "label": "Featured",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "status": {
        "type": "Select",
        "config": {
          "label": "Status",
          "placeholder": "",
          "options": ["Upcoming", "Live", "Complete"]
        }
      },
      "hero_image": {
        "type": "Image",
        "config": {
          "label": "Hero Image",
          "constraint": {
            "width": 3000,
            "height": 2000
          },
          "thumbnails": []
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Tournament title",
          "useAsTitle": true
        }
      },
      "nickname": {
        "type": "Text",
        "config": {
          "label": "Nickname",
          "placeholder": ""
        }
      },
      "prize_pool": {
        "type": "Number",
        "config": {
          "label": "Prize Pool",
          "placeholder": ""
        }
      },
      "country_code": {
        "type": "Text",
        "config": {
          "label": "Country Code",
          "placeholder": "Two-letter country code (e.g., US, UK, FR)"
        }
      },
      "stadium_name": {
        "type": "Text",
        "config": {
          "label": "Stadium Name",
          "placeholder": ""
        }
      },
      "start_date": {
        "type": "Date",
        "config": {
          "label": "Start Date"
        }
      },
      "end_date": {
        "type": "Date",
        "config": {
          "label": "End Date"
        }
      },
      "number_of_teams": {
        "type": "Number",
        "config": {
          "label": "Number of Teams",
          "placeholder": ""
        }
      },
      "recap": {
        "type": "Link",
        "config": {
          "label": "Recap",
          "select": "document",
          "repeat": false,
          "customtypes": [
            {
              "id": "blog",
              "fields": [
                "title",
                "image",
                "category",
                "date",
                "author",
                "excerpt"
              ]
            }
          ]
        }
      },
      "highlight_reel_link": {
        "type": "Text",
        "config": {
          "label": "Highlight Reel Link",
          "placeholder": ""
        }
      },
      "tickets_available": {
        "type": "Boolean",
        "config": {
          "label": "Tickets Available",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "opta_competition_id": {
        "type": "Text",
        "config": {
          "label": "Opta Competition ID",
          "placeholder": ""
        }
      },
      "opta_season_id": {
        "type": "Text",
        "config": {
          "label": "Opta Season ID",
          "placeholder": ""
        }
      },
      "awards": {
        "type": "Group",
        "config": {
          "label": "Awards",
          "repeat": true,
          "fields": {
            "awards": {
              "type": "Link",
              "config": {
                "label": "Awards",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "awards",
                    "fields": [
                      "award_title",
                      "player_name",
                      {
                        "id": "player_team",
                        "customtypes": [
                          {
                            "id": "team",
                            "fields": [
                              "name",
                              "logo",
                              "color_primary",
                              "color_secondary",
                              "opta_id",
                              "key",
                              "country_code",
                              "country",
                              "alphabetical_sort_string"
                            ]
                          }
                        ]
                      },
                      "award_subtitle",
                      "sort_order",
                      "player_headshot"
                    ]
                  }
                ]
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "Navigation": {
      "show_in_navigation": {
        "type": "Boolean",
        "config": {
          "placeholder_false": "Hidden from navigation",
          "placeholder_true": "Show in navigation",
          "default_value": false,
          "label": "Show in Navigation"
        }
      },
      "navigation_order": {
        "type": "Number",
        "config": {
          "label": "Navigation Order",
          "placeholder": "Order in navigation (lower numbers appear first)"
        }
      },
      "nav_image": {
        "type": "Image",
        "config": {
          "constraint": {},
          "thumbnails": [],
          "label": "Navigation Image"
        }
      }
    }
  }
}
