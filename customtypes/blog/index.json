{
  "format": "page",
  "id": "blog",
  "label": "blog",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "title",
          "placeholder": "Blog title"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "category",
          "placeholder": "",
          "options": [
            "Announcements",
            "Tournament Recap",
            "Match Recap",
            "Social Impact",
            "Match Day Preview"
          ]
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "date",
          "placeholder": ""
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "author",
          "placeholder": ""
        }
      },
      "excerpt": {
        "type": "Text",
        "config": {
          "label": "excerpt",
          "placeholder": ""
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "content",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "tournament": {
        "type": "Link",
        "config": {
          "label": "Tournament",
          "select": "document",
          "repeat": false,
          "customtypes": ["tournament"]
        }
      },
      "matches": {
        "type": "Group",
        "config": {
          "label": "Matches",
          "repeat": true,
          "fields": {
            "match": {
              "type": "Link",
              "config": {
                "label": "Match",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "match",
                    "fields": ["opta_id"]
                  }
                ]
              }
            }
          }
        }
      },
      "teams": {
        "type": "Group",
        "config": {
          "label": "Teams",
          "repeat": true,
          "fields": {
            "team": {
              "type": "Link",
              "config": {
                "label": "Team",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "team",
                    "fields": [
                      "opta_id",
                      "name",
                      "key",
                      "country",
                      "logo",
                      "country_code",
                      "color_primary",
                      "color_secondary",
                      "alphabetical_sort_string"
                    ]
                  }
                ]
              }
            }
          }
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    }
  }
}
