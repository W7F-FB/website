{
  "format": "custom",
  "id": "website",
  "label": "Website",
  "repeatable": false,
  "status": true,
  "json": {
    "Footer": {
      "footer_menus": {
        "type": "Group",
        "config": {
          "fields": {
            "menu_title": {
              "type": "Text",
              "config": {
                "label": "Menu Title",
                "placeholder": "Footer menu title"
              }
            },
            "menu_links": {
              "type": "Group",
              "config": {
                "fields": {
                  "link_text": {
                    "type": "Text",
                    "config": {
                      "label": "Link Text",
                      "placeholder": "Link text"
                    }
                  },
                  "link_url": {
                    "type": "Text",
                    "config": {
                      "label": "Link URL",
                      "placeholder": "URL or path"
                    }
                  },
                  "is_external": {
                    "type": "Boolean",
                    "config": {
                      "placeholder_false": "Internal link",
                      "placeholder_true": "External link",
                      "default_value": false,
                      "label": "External Link"
                    }
                  }
                },
                "label": "Menu Links",
                "repeat": true
              }
            }
          },
          "label": "Footer Menus",
          "repeat": true
        }
      }
    },
    "Navbar": {
      "more_info_mode": {
        "type": "Select",
        "config": {
          "label": "More Info Mode",
          "placeholder": "",
          "options": ["Recent News", "Where to watch"]
        }
      },
      "where_to_watch_partners": {
        "type": "Group",
        "config": {
          "label": "Where to watch partners",
          "repeat": true,
          "fields": {
            "broadcast_partner": {
              "type": "Link",
              "config": {
                "label": "Broadcast Partner",
                "select": "document",
                "repeat": false,
                "customtypes": [
                  {
                    "id": "broadcast_partners",
                    "fields": [
                      "name",
                      "logo_white",
                      "logo",
                      "icon_logo",
                      "logo_on_primary",
                      "color_primary",
                      "color_secondary",
                      "streaming_link"
                    ]
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}
